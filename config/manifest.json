{
  "name": "OMG Network Community Points",
  "description": "Transfer Reddit community points on the OMG Network",
  "version": "1.0.0",
  "permissions": [
    "tabs"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.reddit.com/*"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    "bridge.js"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/favicon.png",
      "32": "images/favicon.png",
      "48": "images/favicon.png",
      "128": "images/favicon.png"
    }
  },
  "icons": {
    "16": "images/favicon.png",
    "32": "images/favicon.png",
    "48": "images/favicon.png",
    "128": "images/favicon.png"
  },
  "manifest_version": 2
}
