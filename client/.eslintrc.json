{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": [
		"plugin:react/recommended",
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 11,
		"sourceType": "module"
	},
	"plugins": [
		"react",
		"@typescript-eslint"
	],
	"rules": {
		"semi": ["error", "always"],
		"func-names": ["error", "always"],
		"array-bracket-spacing": ["error", "always", { "singleValue": false }],
		"quote-props": "off",
		"no-unused-vars": "off",
		"no-async-promise-executor": "off",
		"prefer-promise-reject-errors": "off",
		"camelcase": "off",
		"no-undef": "warn"
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
